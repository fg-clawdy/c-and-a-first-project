generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model users {
  id                  Int          @id @default(autoincrement())
  username            String       @unique
  email               String       @unique
  password_hash       String
  secret_question     String
  secret_answer_hash  String
  created_at          DateTime     @default(now()) @map("created_at")
  last_login_at       DateTime?    @map("last_login_at")
  failed_login_attempts Int        @default(0) @map("failed_login_attempts")
  locked_until        DateTime?    @map("locked_until")

  posts       posts[]
  rate_limits rate_limits[]

  @@index([username])
  @@index([email])
  @@map("users")
}

model posts {
  id          Int      @id @default(autoincrement())
  user_id     Int      @map("user_id")
  content     String
  created_at  DateTime @default(now()) @map("created_at")

  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([created_at])
  @@index([user_id])
  @@map("posts")
}

model rate_limits {
  id              Int      @id @default(autoincrement())
  user_id         Int      @map("user_id")
  minute_start    DateTime @map("minute_start")
  posts_in_minute Int      @default(0) @map("posts_in_minute")
  hour_start      DateTime @map("hour_start")
  posts_in_hour   Int      @default(0) @map("posts_in_hour")
  date_recorded   DateTime @map("date_recorded")
  posts_in_day    Int      @default(0) @map("posts_in_day")

  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, date_recorded], name: "unique_user_date")
  @@index([user_id, date_recorded])
  @@map("rate_limits")
}
